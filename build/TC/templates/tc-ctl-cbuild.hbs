<h2>{{i18n "offlineMaps"}}</h2>
<div class="tc-ctl-cbuild-content">
    <div class="tc-ctl-cbuild-draw tc-hidden"></div>
    <i class="tc-ctl-cbuild-map-search-icon"></i>
    <input type="search" list="{{listId}}" class="tc-ctl-cbuild-map-available-srch tc-textbox" placeholder="{{i18n "cb.filter.plhr"}}"{{#unless storedMaps}} disabled{{/unless}} maxlength="200" />                
    <ul id="{{listId}}" class="tc-ctl-cbuild-list">
        <li class="tc-ctl-cbuild-map-available-empty"{{#if storedMaps}} hidden{{/if}}><span>{{i18n "cb.noMaps"}}</span></li>
        <li class="tc-ctl-cbuild-map-not" hidden><span>{{i18n "noMatches"}}</span></li>
        {{#each storedMaps}}
        {{> tc-ctl-cbuild-map-node }}
        {{/each}}
    </ul>
    <div class="tc-ctl-cbuild-new">
        <button class="tc-button tc-icon-button tc-ctl-cbuild-btn-new" disabled title="{{i18n "newofflinemap"}}">{{i18n "newOfflineMap"}}</button>
    </div>
    <div class="tc-ctl-cbuild-drawing tc-hidden">
        <div class="tc-ctl-cbuild-tile-cmd">
            <button class="tc-button tc-icon-button tc-ctl-cbuild-btn-cancel-draw" title="{{i18n "cancel"}}">{{i18n "cancel"}}</button>
        </div>
    </div>
    <div class="tc-ctl-cbuild-progress tc-hidden">
        <p>{{i18n "cb.DownloadingMap" true}}: <span class="tc-ctl-cbuild-progress-count"></span></p>
        <div class="tc-ctl-cbuild-progress-bar">
            <div class="tc-ctl-cbuild-progress-ratio" style="width:0"></div>
        </div>
        <button class="tc-button tc-icon-button tc-ctl-cbuild-btn-cancel-dl" title="{{i18n "cancel"}}">{{i18n "cancel"}}</button>
    </div>
</div>
